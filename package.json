{
    "name": "sketch-api",
    "version": "1.1.0",
    "author": "Sam Deane",
    "license": "MIT",
    "description": "Javascript API for Sketch",
    "main": "Source/API.js",
    "scripts": {
        "clean": "rm -Rf build && mkdir build && mkdir build/tmp",
        "prestart": "npm run-script clean",
        "compile": "babel Source --out-dir build/tmp && browserify build/tmp/API.js --outfile build/tmp/api.js && cat header.js build/tmp/api.js > build/api.js",
        "deploy": "cp build/api.js ../SketchPluginManager/Source/SketchAPI.js",
        "start": "npm run-script compile && npm run-script deploy",
        "poststart": "rm -Rf build/tmp",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.6.0",
        "babel-preset-es2015": "^6.3.13",
        "browserify": "^14.4.0"
    },
    "dependencies": {},
    "babel": {
        "presets": [
            "es2015"
        ]
    }
}
